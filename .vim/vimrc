" ----- Split and Tab Settings -----
function! TmuxOrSplitSwitch(wincmd, tmuxdir)
  let previous_winnr = winnr()
  silent! execute "wincmd " . a:wincmd
  if previous_winnr == winnr()
    call system("tm-select-pane -" . a:tmuxdir . " -f")
    redraw!
  endif
endfunction

